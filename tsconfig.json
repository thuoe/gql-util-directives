{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@src": ["src", "dist"],
      "@src/*": ["src/*", "dist/*"],
      "@src/directives/*": ["src/directives/*", "dist/directives/*"],
    },
  },
}
